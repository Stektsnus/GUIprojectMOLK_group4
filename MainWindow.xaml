<Window x:Class="GUIprojectMOLK_group4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIprojectMOLK_group4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock>destination</TextBlock>
            <TextBox x:Name="destinationBox" Width="250" ></TextBox>
            <Button x:Name="destinationButton" Width="20" Height="20" Click="destinationButton_Click"></Button>
            <TextBlock>file</TextBlock>
            <TextBox x:Name="fileBox" Width="250" ></TextBox>
            <Button x:Name="fileButton" Width="20" Height="20" Click="fileButton_Click"></Button>
            <Button Height="100" Width="100" Click="Button_Click" Margin="10">Test</Button>
        </StackPanel>
    </Grid>
</Window>
